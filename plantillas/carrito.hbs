<button class="btn cerrar-carrito">Cerrar</button>
{{#if carrito.length}}
    <button class="btn__enviarCarrito btn" onclick="carritoController.enviarCarrito()">Enviar</button>
    <table class="table">
        <tr>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Marca</th>
            <th>Foto</th>
            <th>Cantidad</th>
            <th>Envio</th>
            <th>Accion</th>
        </tr>
        {{#each carrito}}
            <tr>
                <td>{{nombre}}</td>
                <td>{{precio}}</td>
                <td>{{marca}}</td>
                <td><img style="display: block; margin:0 auto;" width="50" src="{{foto}}" alt="{{nombre}}"></td>
                <td>{{cantidad}}</td>
                {{#if envio}}
                    <td>Si</td>
                {{else}}
                    <td>No</td>
                {{/if}}
                <td><button class="btn" onclick="carritoController.borrarDelCarrito({{id}})">Borrar</button></td>
            </tr>
        {{/each}}
    </table>
{{else}}
    <h2>El carrito esta vacio</h2>
{{/if}}